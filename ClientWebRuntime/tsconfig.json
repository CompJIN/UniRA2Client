{
  "include": [
    "src",
    "env.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
  ],
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "typing",
    "moduleResolution": "node"
  },
}